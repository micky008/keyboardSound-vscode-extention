{
  "name": "kbsv3",
  "displayName": "kbsv3",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "id": "kbs-conf",
        "title": "Keyboard Sound",
        "properties": {
          "keyboardSound.address-webserice": {
            "type": "string",
            "description": "l'adresse du webservice",
            "editPresentation": "singlelineText",
            "default": "http://localhost:9998"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kbs",
          "name": "Keyboard Sound",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kbsv3.sendSound",
        "title": "Play",
        "icon": {
          "light": "resources/play-light.svg",
          "dark": "resources/play-light.svg"
        }
      },
      {
        "command": "kbsv3.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/refresh-light.svg",
          "dark": "resources/refresh-dark.svg"
        }
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "kbsv3.sendSound",
          "when": "view == kbs && viewItem == sound",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "kbsv3.refresh",
          "when": "view == kbs",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile2": "tsc -p ./",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "tsc -watch -p ./",
    "watch2": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "node esbuild.js --production"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "eventsource": "^4.1.0",
    "play-sound": "^1.1.6",
    "undici": "7.12.0"
  }
}
